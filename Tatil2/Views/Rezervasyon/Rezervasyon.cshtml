@model Tatil2.Models.KartBilgisi

<h2>Rezervasyon Yap</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<<form asp-action="Rezervasyon" method="post">
    <!-- Kart Sahibinin Adı -->
    <div class="form-group">
        <label for="KartSahibiAdi">Kart Sahibi Adı Soyadı</label>
        <input asp-for="RezervasyonId" type="text" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Iban">IBAN</label>
        <input asp-for="Iban" type="text" class="form-control" required pattern="[A-Z]{2}\d{2}[A-Z0-9]{11,30}" title="Geçerli bir IBAN girin" />
    </div>

    <div class="form-group">
        <label for="KartTarih">Kart Son Kullanma Tarihi</label>
        <input asp-for="KartTarih" type="month" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM")" />
    </div>

    <div class="form-group">
        <label for="Cvv">CVV</label>
        <input asp-for="Cvv" type="password" class="form-control" required pattern="\d{3}" title="3 haneli CVV girin" />
    </div>

    <button type="submit" class="btn btn-primary">Rezervasyonu Tamamla</button>
</form>
