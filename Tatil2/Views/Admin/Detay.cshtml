@model Tatil2.Models.Rezervasyon
<style>
	/* Genel stil ayarları */
	table {
		width: 100%;
		border-collapse: collapse;
		margin-bottom: 20px;
		background-color: #f9f9f9;
	}

	th, td {
		padding: 12px 15px;
		text-align: left;
		border: 1px solid #ddd;
	}

	th {
		background-color: #4CAF50;
		color: white;
		width: 33%; /* Sabit genişlik veriyoruz */
		min-width: 150px;
	}

	td {
		width: 70%; /* Geri kalan alan veri sütununa */
	}


	tr:nth-child(even) {
		background-color: #f2f2f2;
	}

	tr:hover {
		background-color: #ddd;
	}

	/* Başlıklar */
	h3 {
		color: white;
		margin-bottom: 15px;
		font-size: 1.9em;
		border-bottom: 2px solid #4CAF50;
		/* padding-bottom: 9px; */
		padding-top: 16px;
	}

	/* Tabloyu çevreleyen div */
	.div1 {
		max-width: 800px;
		margin: 0 auto;
		font-family: Arial, sans-serif;
	}

	.rezervasyon-durum {
		max-width: 800px;
		margin: 30px auto;
		background-color: #f9f9f9;
		padding: 20px;
		border-radius: 10px;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
		text-align: center;
		font-family: Arial, sans-serif;
	}

		.rezervasyon-durum h4 {
			color: #4CAF50;
			font-size: 1.8em;
			margin-bottom: 20px;
			border-bottom: 2px solid #4CAF50;
			padding-bottom: 10px;
		}

		.rezervasyon-durum .btn {
			padding: 10px 25px;
			width: 153px;
			font-size: 1em;
			margin: 0 10px;
			border-radius: 6px;
			border: none;
			cursor: pointer;
			transition: background-color 0.3s ease;
		}

		.rezervasyon-durum .btn-success {
			background-color: #aad665;
			color: white;
		}

			.rezervasyon-durum .btn-success:hover {
				background-color: #218838;
			}

		.rezervasyon-durum .btn-danger {
			background-color: #dc3545;
			color: white;
		}

			.rezervasyon-durum .btn-danger:hover {
				background-color: #ef1f1f;
			}

		.rezervasyon-durum .alert {
			background-color: #e7f3fe;
			border-left: 6px solid #aad665;
			color: #0c5460;
			padding: 15px;
			margin-top: 15px;
			border-radius: 5px;
			font-size: 1.1em;
		}
	/* Stil düzenlemeleri */
	table p {
		font-size: 1em;
		margin: 10px 0;
	}

</style>


<div class="div1">
	<h3>Rezervasyon Detayı</h3>
	<table>
		<tr>
			<th>Ad Soyad</th>
			<td>@Model.Musteri.Ad @Model.Musteri.Soyad</td>
		</tr>
		<tr>
			<th>Mail</th>
			<td>@Model.Musteri.Mail</td>
		</tr>
		<tr>
			<th>Telefon</th>
			<td>@Model.Musteri.Telefon</td>
		</tr>
		<tr>
			<th>TC</th>
			<td>@Model.Musteri.TC</td>
		</tr>
		<tr>
			<th>Cinsiyet</th>
			<td>@(Model.Musteri.Cinsiyet ? "Erkek" : "Kadın")</td>
		</tr>
		<tr>
			<th>Başlangıç</th>
			<td>@Model.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
		</tr>
		<tr>
			<th>Bitiş</th>
			<td>@Model.BitisTarihi.ToString("dd.MM.yyyy")</td>
		</tr>
	</table>

	<h3 class="mt-3">Oda Bilgisi</h3>
	<table>
		<tr>
			<th>Oda Adı</th>
			<td>@Model.Oda.OdaAd</td>
		</tr>
		<tr>
			<th>Fiyat</th>
			<td>@Model.Oda.OdaFiyat ₺</td>
		</tr>
		<tr>
			<th>Açıklama</th>
			<td>@Model.Oda.OdaAciklama</td>
		</tr>
	</table>
	<h3 class="mt-3">Misafirler</h3>
	@if (Model.MisafirBilgileri.Any())
	{  @foreach (var misafir in Model.MisafirBilgileri)
		{
			<table>
				<tr>
					<th>Ad Soyad</th>
					<td>@misafir.Ad @misafir.Soyad</td>

				</tr>
				<tr>
					<th>TC</th>
					<td>@misafir.TC</td>

				</tr>
				<tr>
					<th>DogumTarihi</th>
					<td>@misafir.DogumTarihi.ToString("dd.MM.yyyy")</td>

				</tr>
			</table>
		}

	}

	else
	{
		<table>
			<thead>
				<tr>
					<th></th>

				</tr>
			</thead>
			<tbody>
				<tr>
					<td><p>Misafir bilgisi yok.</p></td>
				</tr>
			</tbody>

		</table>
	}
</div>
<div class="rezervasyon-durum">
	<h4>Rezervasyon Durumu</h4>
	@if (Model.durum == "Beklemede")
	{
		<form asp-action="RezervasyonOnayla" asp-controller="Admin" method="post" style="display:inline;">
			<input type="hidden" name="id" value="@Model.Id" />
			<button type="submit" class="btn btn-success">Onayla</button>
		</form>

		<form asp-action="RezervasyonReddet" asp-controller="Admin" method="post" style="display:inline;">
			<input type="hidden" name="id" value="@Model.Id" />
			<button type="submit" class="btn btn-danger">Reddet</button>
		</form>
	}
	else
	{
		<div class="alert">
			Bu rezervasyon <strong>@Model.durum</strong> olarak işaretlenmiş.
		</div>
	}
</div>

